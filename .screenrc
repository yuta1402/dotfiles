defutf8 on
defencoding utf8
encoding utf8 utf8

# Set escape key as Ctrl-t
escape ^Tt

# Improve delay escape for vim
maptimeout 0

# Disable startup message and visual bell
startup_message off
vbell off

# Clear screen after closing the vim
altscreen on

# the number of screen line
defscrollback 10000

# Enable 256 color
defbce on
term xterm-256color

# Default shell
shell $SHELL
