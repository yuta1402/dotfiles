# for
snippet for
options head
abbr for () {}
	for (${1:int} ${2:i} = ${3:0}; $2 < ${4}; ++$2) {
		${0:#:TARGET}
	}

# counter based for's (don't ask for the type or count start)
snippet fori
options head
abbr for (int i;...; ++i) {}
	for (int ${1:i} = 0; $1 < ${2}; ++$1) {
		${0:#:TARGET}
	}

# for reverse counter
snippet forri
options head
abbr for (int i; ...; --i) {}
	for (int ${1:i} = ${2}; $1 >= 0; --$1) {
		${0:#:TARGET}
	}
